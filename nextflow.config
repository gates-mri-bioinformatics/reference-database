
// example parameters, to be passed by config file or on command line

docker.enabled = true
process.container = "liameabbott/reference-database"

// required parameters
params.database_directory = "s3://gates-mri-bioinformatics/reference-database"
params.source_database = "ensembl"
params.release = "101"
params.species = "macaca_mulatta"
params.assembly = "Mmul_10"

// optional parameters
params.fasta_url = "ftp://ftp.ensembl.org/pub/release-101/fasta/macaca_mulatta/dna/Macaca_mulatta.Mmul_10.dna.primary_assembly.{{1..20},X,Y,MT}.fa.gz"
params.gtf_url = "ftp://ftp.ensembl.org/pub/release-101/gtf/macaca_mulatta/Macaca_mulatta.Mmul_10.101.gtf.gz"
params.star_indexing = false
params.star_read_lengths = null
params.star_genomeSAindexNbases = 14
